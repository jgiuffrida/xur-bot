{
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "complexity": [2, 5],
    "comma-spacing": 1,
    "consistent-return": 0,
    "eqeqeq": [2, "smart"],
    "quotes": [1, "single"],
    "semi": [1, "always"],
    "semi-spacing": 1,
    "yoda": [1, "never"]
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true
  }
}
